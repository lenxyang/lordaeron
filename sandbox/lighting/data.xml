<root>
  <node name="dir" type="light">
    <light type="directional_light">
      <ambient>1.0, 1.0, 1.0, 1.0</ambient>
      <diffuse>0.5, 0.5, 0.4, 1.0</diffuse>
      <specular>0.1, 0.1, 0.1, 1.0</specular>
      <directional>0.0, -1.0, -1.0</directional>
    </light>
  </node>
  <node name="point" type="light">
    <light type="point_light">
      <ambient>1.0, 1.0, 1.0, 1.0</ambient>
      <diffuse>0.8, 0.8, 0.8, 1.0</diffuse>
      <specular>0.1, 0.1, 0.1, 1.0</specular>
      <attenuation>
	<coefficient>0.0, 0.0, 1.0</coefficient>
	<range>10</range>
      </attenuation>
    </light>
  </node>
  <node name="spot" type="light">
    <light type="spot_light">
      <ambient>1.0, 1.0, 1.0, 1.0</ambient>
      <diffuse>0.8, 0.8, 0.8, 1.0</diffuse>
      <specular>0.1, 0.1, 0.1, 1.0</specular>
      <directional>0.0, 0.0, 1.0</directional>
      <inner_angle>30</inner_angle>
      <outer_angle>40</outer_angle>
      <falloff>0.5</falloff>
      <range>30</range>
    </light>
  </node>

  <node name="teaport" type="mesh">
    <path>//media/model/teapot.obj</path>
    <effect name="DiffuseEffect"/>
    <material name="lord::DiffuseEffectProvider">
      <color>0.3f, 0.3f, 0.3f, 1.0f</color>
    </material>
  </node>
</root>
